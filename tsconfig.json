{
    "compilerOptions": {
        "target": "es5",
        "module": "es2015",
        "strict": true,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "declaration": true,
        "outDir": "./lib",
        "declarationDir": "./lib",
        "paths": {
            "@/*": [
                "src/*"
            ]
        },
        "lib": [
            "dom",
            "es2015",
            "es2016",
            "es2017",
            "esnext"
        ]
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}